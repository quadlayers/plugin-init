{
	"name": "quadlayers/plugin-init",
	"description": "Plugin Init",
	"type": "project",
	"authors": [
		{
			"name": "QuadLayers",
			"email": "noreply@quadlayers.com"
		}
	],
	"minimum-stability": "stable",
	"config": {
		"platform": {
			"php": "7.3.0"
		},
		"allow-plugins": {
			"quadlayers/wp-autoload": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require": {
		"php": ">=7.1.0"
	},
	"autoload": {
		"classmap": [
			"../lib/"
		]
	},
	"autoload-dev": {
		"exclude-from-classmap": [
			"../lib/"
		]
	},
	"extra": {
        "quadlayers/wp-autoload": {
			"QuadLayers\\PluginInit": "../lib/"
		},
		"wp-plugin-slug": "plugin-init"
	},
	"require-dev": {
		"quadlayers/wp-autoload": "*",
		"woocommerce/woocommerce-sniffs": "^0.1.3",
		"phpunit/phpunit": "^9.5",
		"wp-cli/wp-cli": "*",
		"wp-cli/i18n-command": "*"
	},
	"scripts": {
		"test:phpunit": "./vendor/bin/phpunit ../phpunit"
	}
}
